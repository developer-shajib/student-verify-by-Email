
<div class="container my-5 student-table">
    <div class="row">
        <div class="col-md-12 m-auto">
            <a class="btn btn-primary mb-3 add_btn" href="/student/create">Add New Student</a>
            <a class="btn btn-danger mb-3 add_btn" href="/student/unverified_student">Unverified Student</a>
            <h2 class="verified_stu_title">All Verified Student</h2>
        </div>
        <% student.reverse().forEach((data,index) => { %>
            <div class="col-md-3 stu_card">
            <a href="/student/<%= data.id %> ">
                    <div class="card shadow-sm">
                        <div class="user-info">
                            <% if (data.photo == 'avatar.png') { %>
                                <img src="/images/<%= data.photo %>">
                      <% } else { %>
                          <img src="/images/students/<%= data.photo %>">
                      <% } %>
                            <hr>
                            <div class="user_body">
                                <h2><%= data.name %></h2>
                                <p class="num"><%= data.cell %></p>
                                <p><%= data.email %></p>
                            </div>
                            <div class="user_action text-center ">
                                <a class="btn btn-sm btn-primary" href="/student/<%= data.id %> "> <i class="fas fa-eye"></i></a>
                                <a class="btn btn-sm btn-warning" href="/student/edit/<%= data.id %> "> <i class="fas fa-edit"></i></a>
                                <a class="btn btn-sm btn-danger delete_btn" href="/student/delete/<%= data.id %> "> <i class="fas fa-trash"></i></a>
                        </div>
                        </div>
                    </div>
                </a>
                </div>
        <% }) %>
    </div>
</div>